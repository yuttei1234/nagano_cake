<div class="container">
  <div class="row">
    <div class="col-md-12 cetner-block">
      
      <h3 class="text-center logintitle text-background">管理者ログイン</h3>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="fields text-center">
          <%= f.label :email,"メールアドレス", class: "emailaddress" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-data" %>
        </div>
      
        <div class="fields text-center">
          <%= f.label :password, "パスワード", class: "passinfo" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "input-data" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "ログイン", class: "btn btn-primary log-in" %>
        </div>
      <% end %>
    </div>    
  </div> 
</div>