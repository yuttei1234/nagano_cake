<div class="container">
  <div class="row">
    <div class="col-sx-6 cetner-block">

    <h3 class="text-center bg-light logintitle w-75">ログイン</h3>

        <p class="text-center bg-light login-subtitle">会員の方はこちらからログイン</p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="text-left">
            <%= f.label :email, "メールアドレス", class:"emailaddress" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-data" %>
          </div>
          <br>

          <div class="text-left">
            <%= f.label :password, "パスワード", class:"passinfo" %>
            <%= f.password_field :password, autocomplete: "current-password", class:"input-data" %>
          </div>

          <div class="text-center">
            <%= f.submit "ログイン", class: "btn btn-primary log-in" %>
          </div>
          <br>
        <% end %>

        <p class="text-center bg-light login-subtitle">会員登録がお済みでない方</p>
        <p class="text-center"><%= link_to"こちら",new_customer_registration_path %>から新規登録を行って下さい。</p>
    </div>
  </div>
</div>

