<div class="container">
 <h2 class="mb-4">新規会員登録</h2>

  <div class="form-group">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <span><b>名前</b></span>
            <%= f.label :last_name, "(姓)", style: "float right;" %>
        </div>
        <div class="col-sx-3">
            <%= f.text_field :last_name, placeholder: "令和"  %>
            <%= f.label :first_name,"(名)", style: "float right;" %>
        </div>
        <div class="col-sx-3">
            <%= f.text_field :first_name, placeholder: "道子" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <span><b>フリガナ</b></span>
            <%= f.label :kata_last_name, "(セイ)", style: "float right;" %>
        </div>
        <div class="col-sx-3">
            <%= f.text_field :kata_last_name, placeholder: "レイワ"  %>
            <%= f.label :kata_first_name,"(メイ)", style: "float right;" %>
        </div>
        <div class="col-sx-3">
            <%= f.text_field :kata_first_name, placeholder: "ミチコ" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-sx-3">
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
        <div class="col-sx-3">
          <%= f.email_field :postal_code, placeholder: "0000000" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <%= f.label :address, "住所" %>
        </div>
        <div class="col-sx-3">
          <%= f.email_field :address, placeholder: "東京都渋谷区代々木神園町0-0", style: "width: 500px;" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <div class="col-sx-3">
          <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        </div>
        <div class="col-sx-3">
          <%= f.email_field :telephone_number, placeholder: "0000000000" %>
        </div>
      </div>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード(6文字以上)" %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード(確認用)" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

      <p class="text-center login-subtitle text-background">既に登録済みの方</p>
      <p class="text-center"><%= link_to"こちら", customer_session_path %>からログインして下さい。</p>
  </div>
</div>