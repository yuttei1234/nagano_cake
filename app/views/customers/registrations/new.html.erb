<div class="container">
 <h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="form-group">
      <div class="col-md-3">
        <span><b>名前</b></span>
          <%= f.label :last_name, "(姓)", style: "float right;" %>
      </div>

      <div class="col-md-4">
          <%= f.text_field :last_name, placeholder: "令和"  %>
          <%= f.label :first_name,"(名)", style: "float right;" %>
      </div>

      <div class="col-md-4">
          <%= f.text_field :first_name, placeholder: "道子" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-md-3">
        <span><b>フリガナ</b></span>
          <%= f.label :last_name, "(セイ)", style: "float right;" %>
      </div>

      <div class="col-md-4">
          <%= f.text_field :last_name, placeholder: "レイワ"  %>
          <%= f.label :first_name,"(メイ)", style: "float right;" %>
      </div>

      <div class="col-md-4">
          <%= f.text_field :first_name, placeholder: "ミチコ" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-md-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-md-4">
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
      </div>
    </div>
  </div>















  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>


</div>