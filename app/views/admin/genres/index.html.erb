<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h3 class="title_genre">ジャンル追加・一覧</h3>
    </div>

      <div class="row">
        <div class="col-md-12">
          <div class="form-group form-horizontal">
            <%= form_for(@genre, url: admin_genres_path(@genre.id)) do |f| %>
              <%= f.label :name, "ジャンル", class: "genre_name" %>
              <%= f.text_field :name, autofocus: true %>
              <%= f.submit "新規登録", class: "btn btn-success genre_registration" %>
          </div>
        </div>
        <% end %>
      </div>

        <div class="row">
          <div class="col-md-12">
            <table class="table table-bordered">
              <tr>
                <th>ジャンル</th>
              </tr>
                <% @genres.each do |genre| %>
                <tr>
                  <td><%= genre.name %></td>
                  <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
  </div>
</div>