<div class="container">
  <div class="row">
    <h3><%= "#{@customer.last_name} #{@customer.first_name}" %>さんの情報</h3>
      <div class="col-md-12">
        <table>
          <tbody>
            <tr>
              <td>会員ID</td>
              <td><%= @customer.id%></td>
            </tr>
             <tr>
              <td>氏名</td>
              <td><%= "#{@customer.last_name} #{@customer.first_name}" %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= "#{@customer.kata_last_name} #{@customer.kata_first_name}" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
            </tr>
            <tr>
              <td>会員ステータス</td>
              <td>
                <% if @customer.validation == true %>
                  有効
                <% else %>
                  退会
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  <div class="row">
    <div class="col-md-10">
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_admin_orders_path(customer_id: @customer.id), class: "btn btn-primary" %>
    </div>
  </div>
</div>