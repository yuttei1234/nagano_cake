<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @item, :image, format: "jpg", fallback: "logo.png", size: "250x250" %>
    </div>
    <div class="col-md-8">
      <table class="itemtable">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <td></td>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <td></td>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <td></td>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td><%= (@item.price*1.1).floor %> (<%= @item.price %>)円</td>
          </tr>
          <td></td>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.validation == true%>
                販売中
                <% else %>
                  売り切れ
                <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="mx-auto">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success", style: "margin: 20px" %>
      </div>
    </div>
</div>