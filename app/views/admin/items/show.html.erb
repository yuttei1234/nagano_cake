<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= attachment_image_tag @items, :image, format: "jpg", fallback: "logo.png", size: "250x250" %>
    </div>
    <div class="col-md-8">
      <table class="table-responsive">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格(税抜価格)</td>
            <td><%= (@item.price*1.1) %></td>
            <td><%= @item.price %>円</td>        
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <% if @item.validation == true%>
                販売中
                <% else %>
                  売り切れ
                <% end %>
            </td>
          </tr>        
        </tbody>
      </table>
    </div>
  </div>
  
    <div class="row">
      <div class="col-md-4 text-right">
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
</div>