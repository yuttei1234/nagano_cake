<div class="container">
  <h2>商品新規登録</h2>

    <div class="row">
      <div class="col-md-12">
        <%= form_for(@item, url:admin_items_path) do |f| %>
       
        <div class="row">
          <div class="col-md-3">
            <div class="field mt-5">
              <div class="form-group">
              </div>
            </div>

        <div class="img-fluid">
          <div class="form-group">
            <%= f.label :image, "商品画像" %>           
          </div>
        </div>

        <div class="field name-left">
          <div class="form-group">
            <%= f.label :name, "商品名" %>
          </div>
        </div>

        <div class="field name-left">
          <div class="form-group">
            <%= f.label :introduction, "商品説明" %>
          </div>
        </div>
        
        <div class="field name-left">
          <div class="form-group">
            <%= f.label :genre, "ジャンル" %>
          </div>
        </div>
        
        <div class="field name-left">
          <div class="form-group">
            <%= f.label :price, "税抜価格" %>
          </div>
        </div>

        <div class="field name-left">
          <div class="form-group">
            <%= f.label :validation, "販売ステータス" %>
          </div>
        </div>
      </div>
      
     <div class="col-md-9">
      <div class="field mt-5">    
        <div class="form-group">
          <div class= "col-md-1"></div>
          <div class= "img-fluid col-md-8">
            <%#= attachment_image_tag @item, :image, format: 'jpg', fallback: "logo.png", size: '200x200' %>          
          </div>
          </div>
        </div>
        
          <div class="form-group">
        <div class= "col-md-1"></div>
          <div class= "col-md-7">
            <%= f.text_field :name, placeholder: '商品名', class: "form-control" %>   
          </div>
        </div>
  
      <div class="form-group">
        <div class= "col-md-1"></div>
          <div class= "col-md-9">
            <%= f.text_field :introduction, placeholder: 'ここに説明文を記述します', class: "form-control" %>
        </div>
      </div>  

      <div class="form-group">
        <div class= "col-md-1"></div>
          <div class= "col-md-7">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, class: "form-control" %>
          </div>
        </div>
  
      <div class="form-group">
        <div class= "col-md-1"></div>
          <div class= "col-md-7">
            <%= f.text_field :price, placeholder: '1000', class: "form-control" %>
            <p class="priceunit">円</p>
        </div>
      </div>  
 
      <div class="form-group">
        <div class= "col-md-1"></div>
          <div class= "col-md-7">
            <%= f.select :validation, {
            "販売中": true,
            "売り切れ": false
            }%>
        </div>
      </div>         
      </div>
      </div> 
    </div>  
    </div>  
    
    <div class="row">
      <div class="col-md-7 ">
        <%= f.submit "新規登録", class: "btn btn-success mx-auto d-block" %>
      </div>
    </div>
    <% end %>

</div>