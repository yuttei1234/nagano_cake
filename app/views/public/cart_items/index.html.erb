<div class="container">
  <div class="row">
    <h2>ショッピングカート</h2>
      <div class="text-right">
        <%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete, class: "btn btn-danger" %>
      </div>
      <br>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cart_items.each do |cart_item|%>
      <tr>
        <td class="text-left">
          <%= attachment_image_tag cart_item.item, :image, format: 'jpg', fallback: 'logo.png', size: "50x50" %>
          <%= cart_item.item.name %>
        </td>
        <td class="text-left">
          <%= cart_item.item.with_tax_price %>
        </td>
        <td class="text-left">
          <%= form_for(cart_item) do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%= f.submit "変更", class: "btn btn-success" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
      <% end %>
        <td>
          <%= link_to "削除する", public_cart_item_path(@cart_items), method: :delete, class:"btn btn-danger" %>
        </td>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <div class="col-md-8">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-primary" %>
    </div>
    <div class="col-md-4">
      <table>
        <tbody>
          <tr>
            <td>合計金額</td>
            <td class="text-right"><%= (@cart_item.total_price).to_i %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row mx-auto">
    <%= link_to "情報入力に進む", new_public_order_path, class: "btn btn-success form-control" %>
  </div>
  </div>
</div>