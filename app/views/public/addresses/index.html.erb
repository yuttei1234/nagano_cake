<div class="container">
  <div class="row">
    <h1>配送先登録/一覧</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@address, url: public_addresses_path(@address.id)) do |f| %>

   <div class="row">
    <div class="col-md-3">
      <div class="field mt-5">
        <div class="form-group"></div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :address, "住所" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :addressee, "宛名" %>
        </div>
      </div>
    </div>

      <div class="col-md-9">
        <div class="form-group content_center">
          <div class="field mt-5">
            <div class="form-group">
              <div class="row">
                <div class="col-md-2"></div>
                  <div class="col-md-6">
                    <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
                  </div>
               </div>

                <div class="field">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="com-md-10">
                        <%= f.text_field :addresses, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="field">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="com-md-4">
                        <%= f.text_field :addresses, placeholder: "令和道子", class: "form-control" %>
                        <div class="col-md-3"></div>
                          <div class="col-md-4">
                            <%= f.submit "新規登録", class: "btn btn-success" %>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
               </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      </div>
    </div>

  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
        </tr>
        
        <% <<<@addresses></@addresses></@addresses></@addresses>.each do |address| %>
          <tr>
            <td><%= addresses.postal_code %></td>
            <td><%= addresses.address %></td>     
            <td><%= addresses.addressee %></td>
            <td>
              <%= link_to "編集する", edit_public_address_path(addresses.id), class: "btn btn-success"%>
              <%= link_to "削除する", public_address(addresses.id), method: :delete, class: "btn btn-danger"%>
            </td>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
  </div>
  </div>