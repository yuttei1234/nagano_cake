<div class="container">
  <div class="row">
    <h1>配送先編集</h1>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for(@address, url: public_address_path(@address.id)) do |f| %>

   <div class="row">
    <div class="col-md-3">
      <div class="field mt-5">
        <div class="form-group"></div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :address, "住所" %>
        </div>
      </div>

      <div class="field">
        <div class="form-group">
          <%= f.label :addressee, "宛名" %>
        </div>
      </div>
    </div>

      <div class="col-md-9">
        <div class="form-group content_center">
          <div class="field mt-5">
            <div class="form-group">
              <div class="row">
                <div class="col-md-2"></div>
                  <div class="col-md-6">
                    <%= f.text_field :postal_code, class: "form-control" %>
                  </div>
               </div>

                <div class="field">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="com-md-10">
                        <%= f.text_field :address, class: "form-control" %>
                      </div>
                    </div>
                  </div>
                </div>

                <div class="field">
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-2"></div>
                      <div class="com-md-4">
                        <%= f.text_field :addressee, class: "form-control" %>
                        <div class="col-md-3"></div>
                          <div class="col-md-4">
                            <%= f.submit "", class: "btn btn-success" %>
                          </div>
                      </div>
                    </div>
                  </div>
                </div>
               </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      </div>
    </div>
  </div>
  </div>