<div class="container">
  <div class="row">
    <h4 class="edittitle">配送先編集</h4>
  </div>

  <div class="row">
    <div class="col-md-10">
      <%= form_with model:@address, url: public_address_path(@address.id), local:true do |f| %>
        <table class="table table-hover">
          <tbody>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td><%= f.text_field :postal_code %></td>
            </tr>
            <tr>
              <td><%= f.label :addresses, "住所" %></td>
              <td><%= f.text_field :addresses, class: "addressnameedit"  %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "宛名" %></td>
              <td><%= f.text_field :name %></td>
              <td><%= f.submit "変更内容を保存", class: "btn btn-success addressedit3" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>