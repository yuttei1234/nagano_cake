<div class="container">
  <div class="row">
    <h3>注文情報入力</h3>
  </div>
    <div class="row">
      <div class="form-horizontal">
        <%= form_with model:@orders, url: confirm_public_orders_path, local:true do |f| %>
          <div class="form-group">
            <div class="col-md-7">
              <b>支払方法</b>
            </div>
          </div>
            <div class="form-group">
              <div class="col-md-7 col-md-offset-1">
                <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
              </div>
            </div>
             <div class="form-group">
              <div class="col-md-7 col-md-offset-1">
                <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
                <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
             </div>
              </div>
                <div class="form-group">
                  <div class="col-md-7">
                    <b>支払方法</b>
                  </div>
                </div>
                  <div class="form-group">
                    <div class="col-md-7 col-md-offset-1">
                       <%= f.radio_button :shippingaddress, 1 %>
                       <%= f.label :address, 'ご自身の住所' %>
                       <%= '〒' %> <%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.last_name %> <%= current_customer.first_name %>
                    </div>
                  </div>
                    <div class="form-group">
                      <div class="col-md-7 col-md-offset-1">
                       <%= f.radio_button :shippingaddress, 2 %>
                       <%= f.label :address, '登録済住所から選択' %>
                       <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %>
                      </div>
                    </div>
                      <div class="form-group">
                        <div class="col-md-7 col-md-offset-1">
                          <%= f.radio_button :shippingaddress, 3 %>
                          <%= f.label :address, '登録済住所から選択' %>
                          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
                          <%= f.text_field :postal_code %><br>
                          <%= f.label :address, "住所" %>
                          <%= f.text_field :address %><br>
                          <%= f.label :name, "宛名" %>
                          <%= f.text_field :name %>
                          </div>
                      </div>
                       <div class="form-group">
                        <div class="mx-auto">
                          <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
                        </div>
                       </div>
          <% end %>
      </div>
    </div>
</div>