<div class="container">
  <div class="row">
    <h1>注文情報確認</h1>
  </div>
    <div class="row">
      <div class="costtable">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @num = 0 %>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= attachment_image_tag cart_item.item, :image, format: "jpg", class: "float-left", fallback: "logo.png", size: "40x40"  %>
                <%= cart_item.item.name %>
              </td>
              <td class="text-left"><%= cart_item.item.with_tax_price %></td>
              <td class="text-left"><%= cart_item.amount %></td>
              <td class="text-left">
                <%= (((cart_item.item.price) * (cart_item.amount)) * 1.1).floor %>
                <% @num += (((cart_item.item.price) * (cart_item.amount)) * 1.1).floor %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
          <table class="table table-hover table-bordered">
            <tr>
              <th>送料</th>
              <td>800</td>
            </tr>
               <tr>
                <th>商品合計</th>
                <td><%= @num %></td>
              </tr>
                  <tr>
                  <th>請求金額</th>
                  <td><%= @order.total_payment %></td>
                </tr>
          </table>
      </div>
    </div>
      <div>
        <table>
          <tbody>
            <tr>
              <th>支払方法</th>
              <td><%= @order.payment_method %></td>
            </tr>
            <tr>
              <th>お届け先</th>
              <td><%= @order.postal_code %><%= @order.address %></td><br>
              <td><%= @order.name %></td>
            </tr>
          </tbody>
        </table>
      </div>
        <div class="row">
          <%= form_with model:@orders, url: public_orders_path, local:true do |f| %>
            <%= f.hidden_field :postal_code, value: @order.postal_code %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :total_payment, value: @order.total_payment %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <%= f.submit "注文を確定する", class: "btn btn-success" %>
          <% end %>
        </div>
</div>