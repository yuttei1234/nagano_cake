<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-1 my-3">
      <h1>注文履歴一覧</h1>
    </div>
  </div>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>注文日</th>
              <th>配送先</th>
              <th>注文商品</th>
              <th>支払金額</th>
              <th>ステータス</th>
              <th>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.strfttime('%Y/%m/%d') %></td>
              </tr>
              <tr>
                <td><%= order.postal_code %></td>
                <td><%= order.aaddress %></td>
                <td><%= order.name %></td>
              </tr>
              <% @order_details.each do |order_details| %>
               <tr>
                <td><%= order_details.item_id.name %></td>
              </tr>
              <% end %>
              <tr>
                <td><%= order.total_payment %></td>
              </tr>
                <tr>
                <td><%= order.status %></td>
              </tr>
              <tr>
                <td><%= link_to "表示する", public_order_path(order.id), class: "btn btn-primary btn-block" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>