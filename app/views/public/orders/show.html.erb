<div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-1">
     <h3>注文履歴詳細</h3>
   </div>
  </div>
   <div class="row">
    <div class="col-md-7">
      <h4>注文情報</h4>
        <table class="table table-hover table-bordered">
          <tbody>
            <tr>
              <td>注文日</td>
              <td><%= @order.created_at.strfttime('%Y/%m/%d') %></td>
            </tr>
            <tr>
              <td>配送先</td>
                <td>
                  <%= @order.postal_code %>
                  <%= @order.address %>
                  <%= @order.name %>
                </td>
            </tr>
            <tr>
              <td>支払方法</td>
              <td><%= @order.payment_method_i18n %><</td>
            </tr>
            <tr>
              <td>ステータス</td>
              <td><%= @order.status %></td>
            </tr>
          </tbody>
        </table>
    </div>
      <div class="col-md-4">
        <h4>請求情報</h4>
          <table class="table table-hoever table-bordered">
            <tbody>
              <tr>
                <td>商品合計</td>
                <td><%= @order_detail.price %></td>
              </tr>
              <tr>
                <td>配送料</td>
                <td>800</td>
              </tr>
              <tr>
                <td>ご請求額</td>
                <td><%= @order.total_payment %></td>
              </tr>
            </tbody>
          </table>
        </div>
    </div>
      <div class="row">
        <div class="col-md-9">
          <h4>注文内容</h4>
            <table class="table table-hover table-bordered">
              <thead>
                <tr>
                  <th>商品</th>
                  <th>単価(税込)</th>
                  <th>個数</th>
                  <th>小計</th>
                </tr>
              </thead>
              <tbody>
                <% @order_details.each do |order_detail| %>
                <tr>
                  <td><%= order_detail.item.name %></td>
                </tr>
                <tr>
                  <td><%= order_detail.item.with_tax_price %></td>
                </tr>
                <tr>
                  <td><%= order_detail.amount %></td>
                </tr>
                <tr>
                  <td>
                    <%= (((order_detail.price) * (order_detail.amount)) * 1.1).floor %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>

</div>